  <servlet>
    <servlet-name>server</servlet-name>
    <servlet-class>com.rpc.http.ServerDispatcher</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>server</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

</web-app>
